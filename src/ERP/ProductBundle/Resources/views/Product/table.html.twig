{% extends "@ERPProduct/admin.html.twig" %}

{% block metaTitle %}
    Produits
{% endblock %}

{% block title %}
    Produits
{% endblock %}

{% block titleSmall %}
    Vos produits
{% endblock %}

{% block titleAction %}
    <a href="{{ path('admin_erp_product_product_add') }}"
       class="btn btn-primary"
       data-toggle="modal"
       data-dismiss="modal"
       data-target="#modal">
        <i class="fa fa-plus-circle"></i> Nouveau
    </a>
{% endblock %}

{% block body %}

    <div class="col-md-12 no-padding">
        <div class="box box-primary">
            <div class="box-body">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Code</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>
                                <a href="{{ path('admin_erp_product_product_update', {id: product.id}) }}">{{ product.code }}</a>
                            </td>
                            <td>{{ product.name }}</td>
                            <td>
                                <div class="btn-group btn-group-xs">
                                    <a href="{{ path('admin_erp_product_product_update', {id: product.id}) }}" class="btn btn-default" data-toggle="modal" data-dismiss="modal" data-target="#modal"><i class="fa fa-pencil"></i></a>
                                    <a href="{{ path('admin_erp_product_product_delete', {id: product.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}